<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    tools:context=".IntroPage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/intro_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_marginStart="30dp"
                android:layout_weight="1"
                android:gravity=""
                android:fontFamily="@font/grandstander_regular"
                android:text="Welcome to Echinoidea!\nWe can help you by:"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/loop_text"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="6"
                android:paddingTop="50dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textAlignment="center"
                android:text="Provide you\nreal-time pothole\nwarnings"
                android:fontFamily="@font/grandstander_bold"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:textStyle="bold"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/intro_button"
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/signin_button_background"
                android:fontFamily="@font/grandstander_semi_bold"
                android:text="Get started now"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                tools:ignore="NotSibling" />

            <TextView
                android:id="@+id/anchor_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="" />


        </LinearLayout>



    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>