<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro_background"
    tools:context=".IntroPage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/intro_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginStart="30dp"
                android:gravity=""
                android:fontFamily="@font/grandstander_regular"
                android:text="Welcome to Echinoidea!\nWe can help you by:"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/loop_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="220dp"
                android:textAlignment="center"
                android:text="Provide you\nreal-time pothole\nwarnings"
                android:fontFamily="@font/grandstander_bold"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/intro_button"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_marginBottom="130dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/signin_button_background"
            android:fontFamily="@font/grandstander_semi_bold"
            android:text="Get started"
            android:layout_alignParentBottom="true"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="20sp"
            tools:ignore="NotSibling" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>