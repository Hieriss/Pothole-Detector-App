<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    tools:context=".SignUp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <TextView
                    android:id="@+id/signup_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Sign Up"
                    android:textAlignment="center"
                    android:fontFamily="@font/grandstander_bold"
                    android:textColor="@color/black"
                    android:textSize="40sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    tools:ignore="UselessParent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/signup_username"
                            android:layout_width="330dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            android:layout_marginBottom="10dp"
                            android:drawableStart="@drawable/user"
                            android:drawablePadding="16dp"
                            android:ems="10"
                            android:hint="username"
                            android:inputType="text"
                            android:padding="10dp"
                            android:fontFamily="@font/grandstander_regular"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/signup_password"
                            android:layout_width="330dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            android:drawableStart="@drawable/padlock"
                            android:drawablePadding="16dp"
                            android:ems="10"
                            android:hint="password"
                            android:inputType="textPassword"
                            android:padding="10dp"
                            android:fontFamily="@font/grandstander_regular"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/signup_confirmpassword"
                            android:layout_width="330dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            android:drawableStart="@drawable/key"
                            android:drawablePadding="16dp"
                            android:ems="10"
                            android:hint="re-enter password"
                            android:inputType="textPassword"
                            android:padding="10dp"
                            android:fontFamily="@font/grandstander_regular"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/signup_email"
                            android:layout_width="330dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            android:drawableStart="@drawable/email"
                            android:drawablePadding="16dp"
                            android:ems="10"
                            android:hint="email"
                            android:inputType="text"
                            android:padding="10dp"
                            android:fontFamily="@font/grandstander_regular"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/signup_phone"
                            android:layout_width="330dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            android:drawableStart="@drawable/phone"
                            android:drawablePadding="16dp"
                            android:ems="10"
                            android:hint="phone number"
                            android:inputType="text"
                            android:padding="10dp"
                            android:fontFamily="@font/grandstander_regular"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="16sp" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/signup_button"
                            android:layout_width="230dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="70dp"
                            android:background="@drawable/signin_button_background"
                            android:text="Sign Up"
                            android:textAllCaps="false"
                            android:fontFamily="@font/grandstander_semi_bold"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/signup_text2"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginBottom="100dp"
                            android:layout_marginEnd="5dp"
                            android:text="Already have an account?"
                            android:fontFamily="@font/grandstander_regular"
                            android:textAlignment="center"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/signup_text3"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginBottom="100dp"
                            android:layout_marginStart="5dp"
                            android:text="Sign In"
                            android:fontFamily="@font/grandstander_semi_bold"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>